<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/fragment_padding"
    android:paddingTop="5dp"
    android:paddingBottom="2dp"
    >
    <GridLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/compromiso_list_dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="24"
            android:background="#9e0202"
            android:textColor="#ffff"
            />
        <TextView
            android:id="@+id/compromiso_list_mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="#ff0000"
            android:textColor="#ffff"
            android:layout_rowWeight="1"
            android:text="24"/>
        <TextView
            android:id="@+id/compromiso_list_aÃ±o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:layout_rowWeight="1"
            android:text="24"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        >
        <TextView
            android:id="@+id/compromiso_list_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="audicnecia xd"
            android:background="#ffd900"
            />
        <TextView
            android:id="@+id/compromiso_list_proceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prceso si vinculado "
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/compromiso_list_persona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="perosona auytoridad "
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/compromiso_list_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hora  y hora estimada - dentro de cujantro xd"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:singleLine="true"/>

    </LinearLayout>


</LinearLayout>
